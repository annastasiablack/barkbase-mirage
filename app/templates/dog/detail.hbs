{{!-- Title and Create Button --}}
<div class="row mt-3">
  <div class="col-lg-6">
    <h3 class="text-info">Dog Detail</h3>
  </div>
</div>
<hr class="bg-info">

{{!-- Displaying Records --}}
{{#if model.imageURL}}
<div class="row image-row">
  <div class="image-div">
    <img src={{model.imageURL}} alt="Photo of {{model.name}}" />
  </div>
</div>
{{/if}}
<div class="row-{{model.size}}">
  <div class="col-lg-12">
    <form>
      <div class="form-group row">
        <label for="dog_name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
          {{model.name}}
        </div>
      </div>

      <div class="form-group row">
        <label for="dog_breed" class="col-sm-2 col-form-label">Breed</label>
        <div class="col-sm-10">
          {{model.breed}}
        </div>
      </div>

      <div class="form-group row">
        <label for="dog_weight" class="col-sm-2 col-form-label">Weight</label>
        <div class="col-sm-10">
          {{model.weight}} Lb
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-10">
          {{#link-to "dog.edit" model.id class="btn btn-primary"}}Edit{{/link-to}}
          {{#link-to "dog" class="btn btn-primary"}}Close{{/link-to}}
        </div>
      </div>
    </form>
  </div>
</div>