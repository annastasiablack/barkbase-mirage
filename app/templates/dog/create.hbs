{{!-- Title and Create Button --}}
  <div class="row mt-3">
    <div class="col-lg-6">
      <h3 class="text-info">Add New Dog</h3>
    </div>
  </div>
  <hr class="bg-info">

  {{!-- Displaying Records --}}
  <div class="row">
    <div class="col-lg-12">
      <form>
        <div class="form-group row">
          <label for="dog_name" class="col-sm-2 col-form-label">Name</label>
          <div class="col-sm-10">
            {{ input type="text" class="form-control" value=dog.name placeholder="Dog name" }}
          </div>
        </div>

        {{!-- <div class="form-group row">
          <label for="dog_imageURL" class="col-sm-2 col-form-label">Image URL</label>
          <div class="col-sm-10">
            {{ input type="text" class="form-control" value=dog.imageURL }}
          </div>
        </div> --}}

        <div class="form-group row">
          <label for="dog_breed" class="col-sm-2 col-form-label">Breed</label>
          <div class="col-sm-10">
            {{ input type="text" class="form-control" value=dog.breed placeholder="Breed" }}
          </div>
        </div>

        <div class="form-group row">
          <label for="dog_weight" class="col-sm-2 col-form-label">Weight</label>
          <div class="col-sm-10">
            {{ input type="number" class="form-control" value=dog.weight placeholder="Weight (lb)" }}
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-10">
            <button class="btn btn-primary" {{action "saveDog"}}>Save</button>
            {{#link-to "dog" class="btn btn-danger"}}Cancel{{/link-to}}
          </div>
        </div>
      </form>
    </div>
  </div>